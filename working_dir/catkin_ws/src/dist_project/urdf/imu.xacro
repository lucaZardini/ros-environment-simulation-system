<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Macro to add an IMU. -->
  <xacro:macro name="imu_plugin_macro"
    params="
      parent_link
      ">

    <gazebo>
      <plugin filename="libhector_gazebo_ros_imu.so" name="imu">
        <bodyName>${parent_link}</bodyName>
          <updateRate>4.0</updateRate>
      </plugin>
    </gazebo>

  </xacro:macro>

</robot>